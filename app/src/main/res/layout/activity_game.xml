<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/stats_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="#ECCC5F"
            android:gravity="center"
            android:text="@string/game_title"
            android:textColor="#FBFAF5"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TableRow android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="#3C3A35"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:text="@string/current_score"
                    android:textColor="#FBFAF5"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="#3C3A35"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:text="@string/best_score"
                    android:textColor="#FBFAF5"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginTop="5dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="#E8583A"
                    android:text="@string/btn_new_text"
                    android:textColor="#FBFAF5"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="#E8583A"
                    android:text="@string/btn_undo_text"
                    android:textColor="#FBFAF5"
                    android:textSize="20sp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="#AD9C81"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_panel"
        app:layout_constraintVertical_bias=".1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_empty"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_2"
                android:gravity="center"
                android:text="@string/game_tile_2"
                android:textColor="@color/game_text_color_dark"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_4"
                android:gravity="center"
                android:text="@string/game_tile_4"
                android:textColor="@color/game_text_color_dark"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_8"
                android:gravity="center"
                android:text="@string/game_tile_8"
                android:textColor="@color/game_text_color_light"
                android:textSize="40sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_16"
                android:gravity="center"
                android:text="@string/game_tile_16"
                android:textColor="@color/game_text_color_light"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_32"
                android:gravity="center"
                android:text="@string/game_tile_32"
                android:textColor="@color/game_text_color_light"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_64"
                android:gravity="center"
                android:text="@string/game_tile_64"
                android:textColor="@color/game_text_color_light"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_128"
                android:gravity="center"
                android:text="@string/game_tile_128"
                android:textColor="@color/game_text_color_light"
                android:textSize="40sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#EDCC61"
                android:gravity="center"
                android:text="@string/game_tile_256"
                android:textColor="@color/game_text_color_light"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_512"
                android:gravity="center"
                android:text="@string/game_tile_512"
                android:textColor="@color/game_text_color_light"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_1024"
                android:gravity="center"
                android:text="@string/game_tile_1024"
                android:textColor="@color/game_text_color_light"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_2048"
                android:gravity="center"
                android:text="@string/game_tile_2048"
                android:textColor="@color/game_text_color_light"
                android:textSize="32sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_other"
                android:gravity="center"
                android:text="@string/game_tile_4096"
                android:textColor="@color/game_text_color_light"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_other"
                android:gravity="center"
                android:text="@string/game_tile_8192"
                android:textColor="@color/game_text_color_light"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_empty"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/game_tile_empty"
                android:gravity="center"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>