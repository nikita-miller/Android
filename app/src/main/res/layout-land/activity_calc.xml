<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_layout_bg"
    android:orientation="vertical"
    tools:context=".CalcActivity">

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:gravity="end"
        android:textColor="@color/calc_history_text"
        android:textSize="20sp"
        tools:text="56 - 98 =" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="end"
        android:textColor="@color/calc_result_text"
        android:textSize="45sp"
        android:textStyle="bold"
        tools:text="-42" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_clear"
                style="@style/FnCalcButton"
                android:text="@string/clear_text" />

            <Button
                android:id="@+id/button_clear_entry"
                style="@style/FnCalcButton"
                android:text="@string/clear_entry" />

            <Button
                android:id="@+id/button_digit_7"
                style="@style/DigitCalcButton"
                android:text="@string/digit_7" />

            <Button
                android:id="@+id/button_digit_8"
                style="@style/DigitCalcButton"
                android:text="@string/digit_8" />

            <Button
                android:id="@+id/button_digit_9"
                style="@style/DigitCalcButton"
                android:text="@string/digit_9" />

            <Button
                android:id="@+id/button_backspace"
                style="@style/FnCalcButton"
                android:text="@string/backspace_sign" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_plus"
                style="@style/FnCalcButton"
                android:text="@string/plus_sign" />

            <Button
                android:id="@+id/button_squared"
                style="@style/FnCalcButton"
                android:text="@string/square_sign" />

            <Button
                android:id="@+id/button_digit_4"
                style="@style/DigitCalcButton"
                android:text="@string/digit_4" />

            <Button
                android:id="@+id/button_digit_5"
                style="@style/DigitCalcButton"
                android:text="@string/digit_5" />

            <Button
                android:id="@+id/button_digit_6"
                style="@style/DigitCalcButton"
                android:text="@string/digit_6" />

            <Button
                android:id="@+id/button_inverse"
                style="@style/FnCalcButton"
                android:text="@string/inverse_sign" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_minus"
                style="@style/FnCalcButton"
                android:text="@string/minus_sign" />

            <Button
                android:id="@+id/button_sqrt"
                style="@style/FnCalcButton"
                android:text="@string/sqrt_sign" />

            <Button
                android:id="@+id/button_digit_1"
                style="@style/DigitCalcButton"
                android:text="@string/digit_1" />

            <Button
                android:id="@+id/button_digit_2"
                style="@style/DigitCalcButton"
                android:text="@string/digit_2" />

            <Button
                android:id="@+id/button_digit_3"
                style="@style/DigitCalcButton"
                android:text="@string/digit_3" />

            <Button
                android:id="@+id/button_percent"
                style="@style/FnCalcButton"
                android:text="@string/percent_sign" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_multiply"
                style="@style/FnCalcButton"
                android:text="@string/multiply_sign" />

            <Button
                android:id="@+id/button_divide"
                style="@style/FnCalcButton"
                android:text="@string/divide_sign" />

            <Button
                android:id="@+id/button_negate"
                style="@style/DigitCalcButton"
                android:text="@string/negate_sign" />

            <Button
                android:id="@+id/button_digit_0"
                style="@style/DigitCalcButton"
                android:text="@string/digit_0" />

            <Button
                android:id="@+id/button_dot"
                style="@style/DigitCalcButton"
                android:text="@string/decimal_sign" />

            <Button
                android:id="@+id/button_equals"
                style="@style/EqualsCalcButton"
                android:text="@string/equals_sign" />

        </TableRow>
    </TableLayout>

</LinearLayout>